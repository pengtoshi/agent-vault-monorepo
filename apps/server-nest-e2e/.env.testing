# NOTE: Warning!!! Do not use API Keys, secrets in this file.
# NOTE: This file is uploaded to the repository.

# Nest
PORT=3000
NEST_ENVIRONMENT=local

# Database
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=localdb_e2e
DATABASE_USERNAME=localusername
DATABASE_PASSWORD=localpass

# Redis
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_PASSWORD=localpass

# JWT
JWT_SECRET=secret
JWT_EXPIRES_IN=100000000
JWT_REFRESH_SECRET=refresh
JWT_REFRESH_EXPIRES_IN=3000000000

POSTGRES_PASSWORD=localpass
POSTGRES_USER=localusername
POSTGRES_DB=localdb

# GraphQL
SCHEMA_DESTINATION='./libs/graphql/schema.graphql'
SORT_SCHEMA=false

# Prisma database connection
PRISMA_DATABASE_URL=postgresql://localusername:localpass@localhost:5432/localdb_e2e?schema=public
READ_ONLY_PRISMA_DATABASE_URL=postgresql://localusername:localpass@localhost:5432/localdb_e2e?schema=public
