datasource db {
    provider = "postgresql"
    url      = env("PRISMA_DATABASE_URL")
}

generator client {
    provider = "prisma-client-js"
    output   = "./generated/client"
}

model User {
    /// 지갑 주소
    address   String     @id @unique @db.VarChar(42)
    /// 역할
    role      ROLE       @default(USER)
    /// 상태
    status    STATUS     @default(ACTIVE)
    /// 일회용 논스값
    nonce     String?
    /// 인증 관련 정보
    authToken AuthToken?
    /// 생성 일시
    createdAt DateTime   @default(now()) @db.Timestamp(3)
    /// 수정 일시
    updatedAt DateTime   @updatedAt @db.Timestamp(3)
}

model AuthToken {
    /// 사용자
    user                  User    @relation(fields: [userAddress], references: [address])
    /// 사용자 지갑 주소
    userAddress           String  @id @unique
    /// access token
    accessToken           String
    /// 암호화된 refresh token
    encryptedRefreshToken String?
}

model Token {
    /// ID
    id        String   @id @default(cuid())
    /// Address
    address   String   @unique
    /// Chain
    chain     Chain    @relation(fields: [chainId], references: [chainId])
    /// Chain ID
    chainId   String
    /// Name
    name      String
    /// Symbol
    symbol    String
    /// Decimals
    decimals  Int
    /// Logo URL
    logoUrl   String?
    /// Price
    price     Float?
    /// Created date
    createdAt DateTime @default(now()) @db.Timestamp(3)
    /// Last updated date
    updatedAt DateTime @updatedAt @db.Timestamp(3)
    /// Agents
    agents    Agent[]
}

model Chain {
    /// Chain ID
    chainId          String     @id @unique
    /// Chain name
    name             String
    /// Chain block explorer URL
    blockExplorerUrl String?
    /// Created date
    createdAt        DateTime   @default(now()) @db.Timestamp(3)
    /// Last updated date
    updatedAt        DateTime   @updatedAt @db.Timestamp(3)
    /// Tokens
    tokens           Token[]
    /// Agents
    agents           Agent[]
    /// Strategies
    strategies       Strategy[]
}

model Agent {
    /// Agent ID
    id                 String        @id @default(cuid())
    /// Agent account address
    address            String        @unique
    /// Agent account
    account            AgentAccount?
    /// Agent vault address
    vaultAddress       String        @unique
    /// Agent vault deposit number
    vaultDepositNumber Int           @default(0)
    /// Agent vault deposit amount
    vaultDepositAmount Float         @default(0)
    /// token
    token              Token?        @relation(fields: [tokenAddress], references: [address])
    /// token address
    tokenAddress       String?
    /// Agent name
    name               String
    /// Agent description
    description        String
    /// Chain which the agent vault is deployed
    chain              Chain         @relation(fields: [chainId], references: [chainId])
    /// Chain ID
    chainId            String
    /// Base prompt
    prompt             String
    /// Risk level (1-5)
    riskLevel          Int           @default(3)
    /// Created date
    createdAt          DateTime      @default(now()) @db.Timestamp(3)
    /// Last updated date
    updatedAt          DateTime      @updatedAt @db.Timestamp(3)
    /// Messages
    messages           Message[]
}

model AgentAccount {
    /// Agent
    agent      Agent    @relation(fields: [address], references: [address])
    /// Agent account address
    address    String   @id @unique
    /// Agent private key
    privateKey String   @unique
    /// Created date
    createdAt  DateTime @default(now()) @db.Timestamp(3)
    /// Last updated date
    updatedAt  DateTime @updatedAt @db.Timestamp(3)
}

model Message {
    /// Message ID
    id        String   @id @default(cuid())
    /// Message content
    content   String
    /// Agent
    agent     Agent    @relation(fields: [agentId], references: [id])
    /// Agent ID
    agentId   String
    /// Created date
    createdAt DateTime @default(now()) @db.Timestamp(3)
    /// Last updated date
    updatedAt DateTime @updatedAt @db.Timestamp(3)
}

model Strategy {
    /// Strategy address
    address   String   @id @unique
    /// Chain
    chain     Chain    @relation(fields: [chainId], references: [chainId])
    /// Chain ID
    chainId   String
    /// Name
    name      String
    /// Default
    default   Boolean  @default(false)
    /// Created date
    createdAt DateTime @default(now()) @db.Timestamp(3)
    /// Last updated date
    updatedAt DateTime @updatedAt @db.Timestamp(3)
}

enum ROLE {
    USER
    ADMIN
}

enum STATUS {
    ACTIVE
    INACTIVE
    DELETE
}
